<UserControl x:Class="Airline_Tycoon.ManagerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Airline_Tycoon"
             mc:Ignorable="d" >  
    <StackPanel Margin="0 0 0 0"
            x:Name="ListContainer"
            HorizontalAlignment="Center"
            Width="Auto">

        <!-- Carte avion -->
        <Border Background="#333"
            CornerRadius="10"
            Padding="15"
            Margin="0 0 0 20">

            <StackPanel>

                <!-- Titre avion + icône -->
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/manager.png"
                       Width="30"
                       Height="30"
                       Margin="0 0 10 0" />
                    <TextBlock Text="Manager"
                           x:Name="TitleText"
                           FontSize="20"
                           Foreground="White" />
                </StackPanel>

                <!-- Ligne des 3 boutons -->
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0 15 0 0">

                    <!-- BUTTON 1 : Seats -->
                    <Button x:Name="MultiplierSpeedButton"
                        Width="110"
                        Height="80"
                        Background="#00C853"
                        BorderThickness="0"
                        Margin="0 0 15 0"
                        Click="MultiplierSpeedButton_Click">

                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                    Value="10" />
                            </Style>
                        </Button.Resources>

                        <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">

                            <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                                <Image Source="/img/vitesse.png"
                                   Width="20"
                                   Height="20"
                                   Margin="0 0 5 0" />
                                <TextBlock x:Name="MultiplierSpeedValueText"
                                       Text="0"
                                       Foreground="White"
                                       FontSize="18"
                                       FontWeight="Bold" />
                            </StackPanel>

                            <TextBlock x:Name="MultiplierSpeedPriceText"
                                   Text="$200"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="0 5 0 0"
                                   HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- BUTTON 3 : Speed -->
                    <Button x:Name="MultiplierButton"
                        Width="110"
                        Height="80"
                        Background="#9C27B0"
                        BorderThickness="0"
                        Click="MultiplierButton_Click">

                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                    Value="10" />
                            </Style>
                        </Button.Resources>

                        <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">

                            <StackPanel Orientation="Horizontal">
                                <Image Source="/img/ticket.png"
                                   Width="20"
                                   Height="20"
                                   Margin="0 0 5 0" />
                                <TextBlock x:Name="MultiplierValueText"
                                       Text="1,00"
                                       Foreground="White"
                                       FontSize="18"
                                       FontWeight="Bold" />
                            </StackPanel>

                            <TextBlock x:Name="MultiplierText"
                                   Text="$100"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="0 5 0 0"
                                   HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>

                </StackPanel>

            </StackPanel>

        </Border>
    </StackPanel>
</UserControl>
