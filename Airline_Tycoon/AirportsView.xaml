<UserControl x:Class="Airline_Tycoon.AirportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="ListContainer"
                    Margin="20 20 0 20">
            <Button x:Name="AddAirportButton"
                    Height="60"
                    Width="393"
                    HorizontalAlignment="Left"
                    Click="AddAirportButton_Click">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="AddAirportText"
                               Text="+ Buy Airport"
                               FontSize="20"
                               FontWeight="Bold" />
                    <TextBlock x:Name="NextAirportPriceText"
                               Text="$0"
                               FontSize="20"
                               Margin="10,0,0,0" />
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>

    