<Window x:Class="Airline_Tycoon.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True">
    <Border Background="#2F2F2F"
            CornerRadius="10"
            BorderBrush="#444"
            BorderThickness="2"
            Padding="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Voulez-vous vraiment quitter le jeux ?"
                       FontStyle="Italic"
                       Foreground="White"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       Margin="0,0,0,15" />
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Style="{StaticResource MenuButton}"
                        x:Name="YesButton"
                        Width="120"
                        Height="60"
                        Margin="0,0,20,0"
                        Click="YesButton_Click"
                        IsDefault="True">
                    <TextBlock Text="Oui"
                               FontSize="18"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>
                
                <Button Style="{StaticResource MenuButton}"
                        x:Name="NoButton"
                        Width="120"
                        Height="60"
                        Click="NoButton_Click"
                        IsCancel="True">
                    <TextBlock Text="Non"
                               FontSize="18"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
