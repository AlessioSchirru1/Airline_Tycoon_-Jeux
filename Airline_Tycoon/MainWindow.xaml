<Window x:Class="Airline_Tycoon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airline_Tycoon"
        mc:Ignorable="d"
        Title="Airline Tycoon"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        Width="1920"
        Height="1080">

    <Window.Resources>
        <Style x:Key="MenuButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#272727" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Height"
                    Value="80" />
            <Setter Property="Padding"
                    Value="0" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#383838" />
                            </Trigger>

                            <!-- Click -->
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#1A1A1A" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Zone principale à gauche -->
            <ColumnDefinition Width="*" />
            <!-- Bandeau droit : environ 1/3 -->
            <ColumnDefinition Width="0.33*" />
        </Grid.ColumnDefinitions>

        <!-- Panneau gauche (fond blanc) -->
        <Border Grid.Column="0"
                Background="White" />

        <!-- Bandeau droit -->
        <Border Grid.Column="1"
                Background="#202020"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Ligne des options -->
                    <RowDefinition Height="Auto" />
                    <!-- Contenu du panneau -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 3 options cliquables -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 20">

                    <Button Style="{StaticResource MenuButton}"
                            Margin="0, 0, 40, 0">

                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center">

                            <Border Width="40"
                                    Height="40"
                                    Background="#FFFFFF">

                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="/img/avion.png" />
                                </Border.OpacityMask>

                            </Border>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButton}"
                            Margin="0, 0, 40, 0">

                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center">

                            <Border Width="40"
                                    Height="40"
                                    Background="#FFFFFF">

                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="/img/avion.png" />
                                </Border.OpacityMask>

                            </Border>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButton}">

                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center">

                            <Border Width="40"
                                    Height="40"
                                    Background="#FFFFFF">

                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="/img/avion.png" />
                                </Border.OpacityMask>

                            </Border>
                        </StackPanel>
                    </Button>


                </StackPanel>

                <!-- Zone où tu pourras mettre du contenu plus tard -->
                <Border Grid.Row="1"
                        Background="#2A2A2A"
                        CornerRadius="10"
                        BorderBrush="#444"
                        BorderThickness="2" />
            </Grid>
        </Border>
    </Grid>
</Window>
