<Window   x:Class="Airline_Tycoon.parametre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="parametre"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True">
    <Grid x:Name="MainGrid">
        <Border
            Background="#2F2F2F"
            CornerRadius="10"
            BorderBrush="#444"
            BorderThickness="2"
            Padding="15">
            <StackPanel>
                <Label Content="Choisissez la valeur du son souhaité" Width="160" Height="30" Margin="0,30,0,0"/>
                <StackPanel>
                    <ComboBox x:Name="cbVolumeson" Width="120" SelectionChanged="cbVolumeson_SelectionChanged" RenderTransformOrigin="0.471,2.231" Margin="0,20,0,0"/>
                </StackPanel>
                <Button x:Name="butonfermer" Content="Fermer pour valider" Width="115" Margin="0,20,0,0" Click="butonfermer_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
